<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="?attr/colorButtonNormal"
    android:paddingBottom="40dp"
    tools:context="balajianoopgupta.projects.com.android_math_quiz.QuizActivity">

    <FrameLayout
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/gridrow1"
            android:layout_above="@+id/gridrow2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FFCCBC"
                    />
                <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn2"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill_vertical"
                    android:layout_weight="1"
                    android:background="#FFCCBC"
                    />
                <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn3"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FFCCBC"
                    />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/gridrow2"
            android:layout_above="@+id/gridrow3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn4"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FFAB91"
                    />
                <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn5"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill_vertical"
                    android:layout_weight="1"
                    android:background="#FFAB91"/>
                <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn6"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FFAB91"
                    />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/gridrow3"
            android:layout_above="@+id/gridrow4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn7"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FFAB91"
                    />
                <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn8"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill_vertical"
                    android:layout_weight="1"
                    android:background="#FFAB91"
                    />
                <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn9"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FFAB91"
                    />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/gridrow4"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:text="CLR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnClr"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FF8A65"
                    />
                <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn0"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill_vertical"
                    android:layout_weight="1"
                    android:background="#FF8A65"
                    />
                <Button
                    android:text="Enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEnter"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:layout_gravity="fill_horizontal|fill"
                    android:layout_weight="1"
                    android:background="#FF8A65"

                    />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
